generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// prisma user basic model
model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username    String   
  email  String
}

model Order {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  collectionAddress   String
  date                DateTime
  firstName           String
  lastName            String
  email               String
  phone               String
  recipientAddress    String
  department          String
  municipality        String
  referencePoint      String
  instructions        String
  packages            Json 
}

